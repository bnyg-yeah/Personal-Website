{
  "compilerOptions": {
    "target": "ES2020", // modern JS target
    "lib": ["dom", "dom.iterable", "es2020"], // libraries available in browser
    "allowJs": true, // let JS and TS coexist while you migrate
    "skipLibCheck": true, // skip type checks in node_modules
    "strict": true, // catch more bugs early
    "noEmit": true, // donâ€™t output JS files
    "esModuleInterop": true, // interop between CommonJS and ESModules
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // tells TS to allow JSX
    "incremental": true,
    "baseUrl": "src", // so you can do "@/components/Header"
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
